<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel styleName="form-panel">

        <g:Label ui:field="titoloLabel" styleName="label-header" />
        <g:TextBox ui:field="titoloBox" styleName="note-input"/>
        
        <g:TextArea ui:field="contenutoArea" styleName="note-textarea" />
        
        <g:HorizontalPanel spacing="10" styleName="button-panel">
            <g:Button ui:field="modificaButton" text="Modifica" />
            <g:Button ui:field="salvaButton" text="Salva" />
            <g:Button ui:field="eliminaButton" text="Elimina" />
            <g:Button ui:field="backButton" text="Torna alla Home" styleName="bottoneLogin" />
        </g:HorizontalPanel>

    </g:HTMLPanel>
</ui:UiBinder>
