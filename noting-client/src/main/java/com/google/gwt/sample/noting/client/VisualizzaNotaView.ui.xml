<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel styleName="form-panel">

        <g:HTML ui:field="backLink" styleName="back-link">&lt; Torna alla Home</g:HTML>
        
        <g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" width="100%">
            <g:Label ui:field="topRightTagLabel" text="Tag:" styleName="label2"/>
        </g:HorizontalPanel>


        <g:HTMLPanel styleName="note-header-panel">
            <g:TextBox ui:field="titoloBox" styleName="note-input"/>
        </g:HTMLPanel>
        
        <g:TextArea ui:field="contenutoArea" styleName="note-textarea" />
        
        <g:HorizontalPanel spacing="10" verticalAlignment="ALIGN_MIDDLE" styleName="button-panel">
            <g:Label text="Stato:" styleName="label2"/>
            <g:ListBox ui:field="statoBox" styleName="status"/>
            <g:Button ui:field="modificaButton" text="Modifica" styleName="bottoneLogin"/>
            <g:Button ui:field="restoreButton" text="⮌ Ripristina" styleName="bottoneLogin"/>
            <g:ListBox ui:field="historyBox" styleName="hidden"/>
        </g:HorizontalPanel>
        
        <g:HorizontalPanel ui:field="tagControlsPanel" spacing="10" verticalAlignment="ALIGN_MIDDLE" styleName="button-panel">
            <g:Label ui:field="tagLabel" text="Tag:" styleName="label2"/>
            <g:ListBox ui:field="tagBox" styleName="statusTag" />
            <g:TextBox ui:field="newTagBox" styleName="note-input" visible="false" />
            <g:Button ui:field="addTagButton" text="Aggiungi Tag" styleName="bottoneLogin" />
            <g:Button ui:field="eliminaTagButton" text="Elimina Tag" styleName="bottoneLogin" />
        </g:HorizontalPanel>

        <g:HTMLPanel ui:field="shareSection" styleName="share-section hidden">
            <g:Label text="Condivisa con:" styleName="label2"/>
            <g:FlowPanel ui:field="sharedUsersPanel" />
            
            <g:HorizontalPanel spacing="10" verticalAlignment="ALIGN_MIDDLE" styleName="button-panel">
                <g:Button ui:field="aggiungiUtenteButton" text="➕ Aggiungi utente" styleName="bottoneLogin"/>
                <g:SuggestBox ui:field="cercaUtenteDaAggiungere" styleName="status" />
                <g:Button ui:field="confermaUtenteDaAggiungere" text="Conferma" styleName="bottoneLogin"/>
            </g:HorizontalPanel>
        </g:HTMLPanel>

        <g:HorizontalPanel spacing="10" verticalAlignment="ALIGN_MIDDLE" styleName="button-panel" horizontalAlignment="ALIGN_CENTER">
            <g:Button ui:field="salvaButton" text="Salva" styleName="bottoneLogin"/>
            <g:Button ui:field="eliminaButton" text="Elimina" styleName="bottoneLogin"/>
            <g:Button ui:field="creaUnaCopia" text="CreaCopia" styleName="bottoneLogin"/>
            <g:Button ui:field="annullaCondivisione" text="Annulla Condivisione" styleName="bottoneLogin"/>
        </g:HorizontalPanel>

    </g:HTMLPanel>
</ui:UiBinder>