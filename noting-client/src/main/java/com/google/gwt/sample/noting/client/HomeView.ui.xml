<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel>
        <!-- Header utente -->
        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" styleName="headerPanel">
            <g:Label ui:field="usernameLabel" styleName="userInfo"/>
            <g:Button ui:field="logoutButton" text="Logout" styleName="bottoneLogin"/>
        </g:HorizontalPanel>
        <hr/>

        <!-- Titolo / benvenuto -->
        <g:Label text="Benvenuto nella tua dashboard!" styleName="label2"/>

        <!-- Azioni principali: crea nota + cerca -->
        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" spacing="10">
            <g:Button ui:field="createNoteButton" text="Crea Nota" styleName="bottoneLogin"/>

            <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" spacing="2">
                <g:TextBox ui:field="searchBox" styleName="search-input"/>
                <g:Button ui:field="searchButton" text="Cerca" styleName="bottoneLogin"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" spacing="5">
                <g:Label text="Filtra per: " styleName="label2"/>
                <g:ListBox ui:field="filterTypeBox" styleName="status"/>
                <g:TextBox ui:field="filterValueBox" styleName="search-input"/>
                <g:Button ui:field="applyFilterButton" text="Applica" styleName="bottoneLogin"/>
            </g:HorizontalPanel>
        </g:HorizontalPanel>

        <!-- NUOVA barra filtri: Le mie note / Condivise con me -->
        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" spacing="8" styleName="filterBar">
            <g:Button ui:field="myNotes" text="Le mie note"/>
            <g:Button ui:field="condiviseConMe" text="Condivise con me"/>
        </g:HorizontalPanel>

        <!-- Lista note -->
        <g:FlowPanel ui:field="noteListPanel" width="100%" styleName="noteGridPanel"/>
    </g:HTMLPanel>

</ui:UiBinder>
