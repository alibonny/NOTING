<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel styleName="form-panel">
        
        <g:HTML ui:field="backLink" styleName="back-link">&lt; Torna alla Home</g:HTML>

        <g:Label text="Crea una nuova Nota" styleName="label-header"/>

        <g:Label text="Titolo:" styleName="label2"/>
        <g:TextBox ui:field="titoloBox" styleName="note-input"/>

        <g:Label text="Contenuto:" styleName="label2"/>
        <g:TextArea ui:field="contenutoBox" styleName="note-textarea"/>

        <g:HorizontalPanel spacing="10" verticalAlignment="ALIGN_MIDDLE" styleName="button-panel">
            
            <g:Label text="Stato:" styleName="label2"/>



            <!-- Stato della nota-->
            <g:ListBox ui:field="statoBox" styleName="status" />


            <!-- Lista degli utenti-->

            <g:SuggestBox ui:field="utenteBox" styleName="user-suggest" />
            <g:Button ui:field="shareBtn" text="Condividi" styleName="share-button" />



            <g:Button ui:field="saveButton" text="Salva" styleName="bottoneLogin"/>

        </g:HorizontalPanel>

        <g:Label ui:field="utentiCondivisi" text=""  styleName="utentiCondivisi"/>


    </g:HTMLPanel>
</ui:UiBinder>