<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
<g:HTMLPanel>

        <g:Label text="Titolo:"/>
        <g:TextBox ui:field="titoloBox" width="100%"/>

        <g:Label text="Contenuto:"/>
        <g:TextArea ui:field="contenutoBox" width="100%" height="150px"/>

        <g:Button ui:field="saveButton" text="Salva"/>
        <g:Button ui:field="cancelButton" text="Annulla"/>
        <g:Button ui:field="backButton" text="Torna alla Home"/>


    </g:HTMLPanel>
</ui:UiBinder>