<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel styleName="form-panel">
        
        <g:Label text="Crea una nuova Nota" styleName="label-header"/>

        <g:Label text="Titolo:" styleName="label2"/>
        <g:TextBox ui:field="titoloBox" styleName="note-input"/>

        <g:Label text="Contenuto:" styleName="label2"/>
        <g:TextArea ui:field="contenutoBox" styleName="note-textarea"/>

        <g:Label text="Stato:" styleName="label2"/>
        <g:ListBox ui:field="statoBox" styleName="note-select">
           
        </g:ListBox>


        <g:HorizontalPanel spacing="10" styleName="button-panel">
            <g:Button ui:field="saveButton" text="Salva" styleName="bottoneSave"/>
            <g:Button ui:field="backButton" text="Torna alla Home" styleName="bottoneBack"/>
        </g:HorizontalPanel>

    </g:HTMLPanel>
</ui:UiBinder>